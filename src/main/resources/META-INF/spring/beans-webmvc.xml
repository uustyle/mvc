  <!-- Static Resourceの設定 -->
  <mvc:resources mapping="/resources/**" location="/WEB-INF/resources/" />


  <mvc:view-resolvers>
    <mvc:jsp prefix="/WEB-INF/views/" suffix=".jsp"/>
  </mvc:view-resolvers>

